{
	"defaultSeverity": "error",
	"extends": [
		"tslint:recommended",
		"tslint-react"
		/*"tslint-config-prettier"*/
	],
	"plugins": [
		"react"
	],
	"jsRules": {
		"no-unused-expression": true
	},
	"linterOptions": {
		"exclude": [
			"docker/**/*.js",
			"node_modules/",
			"node_modules/**/*.ts(x)"
		]
	},
	"rules": {
		"no-debugger": false,
		/*разрешить console*/
		"no-console": false,
		/*Конец файла должен заканчиваться новой строкой*/
		"eofline": false,
		/*отключает сортировку полей объекта*/
		"object-literal-sort-keys": false,
		/*Запрещает листинг объекта объекта в выражении утверждения типа*/
		"no-object-literal-type-assertion": false,
		/*отключает сортировку import*/
		"ordered-imports": [false],
		/*Запрещает ненужный доступ к строковым литералам*/
		"no-string-literal": false,
		"eol-last": false,
		"jsx-no-lambda": [
			false
		],
		"prefer-const": [
			false
		],
		"jsx-wrap-multiline": false,
		"quotemark": [
			true,
			"single",
			"jsx-double"
		],
		"semicolon": [
			true,
			"always",
			"strict-bound-class-methods"
		],
		"trailing-comma": false,
		"jsx-no-multiline-js": false,
		"no-submodule-imports": [
			true,
			"moment/locale/zh-cn",
			"history/createBrowserHistory",
			"cbkit/lib",
			"react-test-renderer/shallow"
		],
		"indent": [
			true,
			"tabs",
			4
		],
		"no-trailing-whitespace": false,
		"max-line-length": [
			false
		],
		"interface-over-type-literal": false,
		"jsx-alignment": false,
		"jsx-self-close": false,
		"arrow-parens": false,
		"align": false,
		"one-line": [
			true,
			"check-open-brace",
			"check-whitespace"
		],
		"no-implicit-dependencies": [
			true,
			"dev"
		],
		"member-access": [
			false
		],
		"member-ordering": [
			false
		],
		"interface-name": [
			true,
			"always-prefix"
		]
	}
}
