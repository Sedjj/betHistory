{
	"compilerOptions": {
      "baseUrl": "./",
      "outDir": "./dist",
      "module": "commonjs",
      "target": "es2019",
      "sourceMap": false,
      "experimentalDecorators": true,
      "allowJs": true,
      "skipLibCheck": true,
      "rootDirs": [
        "src"
      ],
      "moduleResolution": "node",
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "esModuleInterop": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
		"noUnusedLocals": true,
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"incremental": true,
		"typeRoots": [
			"./types",
			"./node_modules/@types"
		]
	},
	"exclude": [
		"node_modules",
		"typings",
		"types",
		"dist",
		"test",
		"docker",
		"**/*spec.ts"
	]
}
