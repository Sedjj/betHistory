{
	"compilerOptions": {
		"baseUrl": "./",
		"outDir": "./dist",
		"module": "commonjs",
		"target": "es2019",
		"sourceMap": true,
		"experimentalDecorators": true,
		"allowJs": true,
		"rootDirs": [
			"src"
		],
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
		"noUnusedLocals": true,
		"paths": {
			"*": [
				"types/*"
			],
			"utils/*": [
				"web/utils/*"
			]
		},
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"incremental": true
	},
	"typeRoots": [
		"node_modules/@types"
	],
	"exclude": [
		"node_modules",
		"dist",
		"docker",
		"help"
	]
}
