{
	"name": "backend",
	"version": "2.0.0",
	"description": "",
	"author": "Eldar Salimzebarov",
	"license": "FSF",
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"post-commit": "git update-index -g"
		}
	},
	"lint-staged": {
		"*.{js.ts}": [
			"prettier --write",
			"git add"
		]
	},
	"scripts": {
		"build": "rimraf dist && tsc -p tsconfig.json",
		"format": "prettier --write \"src/**/*.ts\"",
		"start": "ts-node -r tsconfig-paths/register src/main.ts",
		"start:dev": "cross-env NODE_ENV=development tsc-watch -p tsconfig.json --onSuccess \"node dist/main.js\"",
		"start:debug": "cross-env NODE_ENV=development tsc-watch -p tsconfig.json --onSuccess \"node --inspect-brk dist/main.js\"",
		"start:prod": "node dist/main.js",
		"lint": "tslint -p tsconfig.json -c tslint.json",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json"
	},
	"dependencies": {
		"@nestjs/bull": "^0.2.3",
		"@nestjs/common": "^7.4.4",
		"@nestjs/config": "0.5.0",
		"@nestjs/core": "^7.4.4",
		"@nestjs/mongoose": "^7.0.2",
		"@nestjs/platform-express": "^7.4.4",
		"@nestjs/schedule": "^0.4.1",
		"@types/body-parser": "^1.19.0",
		"@types/config": "0.0.36",
		"@types/cron": "^1.7.2",
		"@types/elementtree": "^0.1.0",
		"@types/jszip": "^3.4.1",
		"@types/mongoose": "^5.7.36",
		"@types/tough-cookie": "^4.0.0",
		"@types/winston": "^2.4.4",
		"body-parser": "^1.19.0",
		"bull": "^3.18.1",
		"config": "^3.3.2",
		"cross-env": "^7.0.2",
		"form-data": "^3.0.0",
		"got": "^11.8.0",
		"moment": "^2.29.1",
		"mongoose": "^5.10.11",
		"nest-schedule": "^0.6.4",
		"nest-winston": "^1.4.0",
		"nestjs-telegraf": "^1.2.1",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^3.0.2",
		"rxjs": "^6.6.3",
		"tough-cookie": "^4.0.0",
		"winston": "^3.3.3",
		"xlsx-template": "1.0.0"
	},
	"devDependencies": {
		"@nestjs/testing": "^7.4.4",
		"@types/bull": "^3.14.4",
		"@types/jest": "26.0.15",
		"@types/node": "14.14.6",
		"@types/rimraf": "^3.0.0",
		"@types/supertest": "2.0.10",
		"@types/tsc-watch": "^4.2.0",
		"husky": "^4.3.0",
		"jest": "26.6.1",
		"lint-staged": "^10.5.0",
		"prettier": "2.1.2",
		"supertest": "6.0.0",
		"ts-jest": "^26.4.3",
		"ts-node": "9.0.0",
		"tsc-watch": "^4.2.9",
		"tsconfig-paths": "3.9.0",
		"tslint": "6.1.3",
		"typescript": "4.0.5"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".spec.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"coverageDirectory": "./coverage",
		"testEnvironment": "node"
	}
}
