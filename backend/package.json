{
	"name": "backend",
	"version": "0.0.1",
	"description": "",
	"author": "",
	"license": "MIT",
	"scripts": {
		"build": "rimraf dist && tsc -p tsconfig.json",
		"format": "prettier --write \"src/**/*.ts\"",
		"start": "cross-env NODE_ENV=production ts-node -r tsconfig-paths/register src/main.ts",
		"start:dev": "cross-env NODE_ENV=development tsc-watch -p tsconfig.json --onSuccess \"node dist/main.js\"",
		"start:debug": "cross-env NODE_ENV=development tsc-watch -p tsconfig.json --onSuccess \"node --inspect-brk dist/main.js\"",
		"start:prod": "cross-env NODE_ENV=production node dist/main.js",
		"lint": "tslint -p tsconfig.json -c tslint.json",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json"
	},
	"dependencies": {
		"@nestjs/common": "^6.10.14",
		"@nestjs/config": "0.0.9",
		"@nestjs/core": "^6.10.14",
		"@nestjs/mongoose": "^6.3.1",
		"@nestjs/platform-express": "^6.10.14",
		"@nestjs/schedule": "^0.1.1",
		"@types/config": "0.0.36",
		"@types/cron": "^1.7.1",
		"@types/elementtree": "^0.1.0",
		"@types/jszip": "^3.1.7",
		"@types/mongoose": "^5.5.41",
		"@types/node-telegram-bot-api": "^0.40.1",
		"@types/tough-cookie": "^2.3.6",
		"@types/winston": "^2.4.4",
		"config": "^3.2.4",
		"cross-env": "^6.0.3",
		"got": "^10.2.2",
		"moment": "^2.24.0",
		"mongoose": "^5.8.11",
		"nest-schedule": "^0.6.4",
		"nestjs-telegraf": "^0.7.0",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^3.0.0",
		"rxjs": "^6.5.4",
		"telegraf": "^3.35.0",
		"tough-cookie": "^3.0.1",
		"winston": "^3.2.1",
		"xlsx-template": "^0.5.0"
	},
	"devDependencies": {
		"@nestjs/testing": "^6.10.14",
		"@types/express": "4.17.2",
		"@types/jest": "24.9.0",
		"@types/node": "13.1.7",
		"@types/supertest": "2.0.8",
		"jest": "24.9.0",
		"prettier": "1.19.1",
		"supertest": "4.0.2",
		"ts-jest": "24.3.0",
		"ts-node": "8.6.2",
		"tsc-watch": "^4.0.0",
		"tsconfig-paths": "3.9.0",
		"tslint": "5.20.1",
		"typescript": "3.7.4"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".spec.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"coverageDirectory": "./coverage",
		"testEnvironment": "node"
	}
}
